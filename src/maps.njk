<h1>Maps</h1>
<h2>Detailed Map</h2>
<div id="detailed-map" class="h-[500px] w-full md:w-[750px] mx-auto my-5"></div>

<h2>Travel Map</h2>
<div id="travel-map" class="h-[500px] w-full md:w-[750px] mx-auto"></div>

<script>
const detailedMap = L.map('detailed-map', {
    crs: L.CRS.Simple,
    minZoom: -5,
});
const travelMap = L.map('travel-map', {
    crs: L.CRS.Simple,
    minZoom: -5,
});
const bounds = [[0,0], [1536,2048]];

L.imageOverlay('{{'/game/images/Base Map No Grid.jpg' | url}}', bounds)
  .addTo(detailedMap);
detailedMap.fitBounds(bounds)
  .setView([1286,400],0);

L.imageOverlay('{{'/game/images/Over Land Map.jpg' | url}}', bounds)
  .addTo(travelMap);
travelMap.fitBounds(bounds)
  .setView([1286,300],1);
</script>