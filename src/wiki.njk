<h2>Detailed Map</h2>
<div id="detailed-map" class="h-[500px] w-full md:w-[750px] mx-auto my-5"></div>



<script>
const detailedMap = L.map('detailed-map', {
    crs: L.CRS.Simple,
    minZoom: -5,
});
const bounds = [[0,0], [1536,2048]];

L.imageOverlay('{{'/game/images/Base Map No Grid.jpg' | url}}', bounds)
  .addTo(detailedMap);
detailedMap.fitBounds(bounds)
  .setView([1286,400],0);
</script>